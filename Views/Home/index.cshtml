@model MeetingInfo;
@{
    ViewBag.Title = "Toplantı Başvuru";
    Layout= "_Layout2";
}
<main class="text-center">
<h1 class="h4"> @ViewData["Selamlama"] </h1>
<h3>Toplantı katılım durumunuzu bildiriniz</h3> <br>

<div class="card my-2">
    <ul class="list-group list-group-flush">
        <li class="list-group-item">@Model.Location</li>
        <li class="list-group-item">@Model.Date.ToString("dd/MM/yyyy HH:mm:ss") tarihinde gerçekleşecektir</li>
        <li class="list-group-item">@Model.NumberOfPeople Katılımcı</li>
    </ul>
</div>
<a class="btn btn-sm btn-outline-info" asp-controller="Meeting" asp-action="Apply">Başvuru Yap</a>
</main>